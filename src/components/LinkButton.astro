---
interface Props {
  href: string;
  title: string;
  icon: string;
}

const { href, title, icon } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class="bg-primary hover:bg-primary-dark dark:bg-primary-dark dark:hover:bg-primary text-white font-bold py-2 px-4 rounded-full w-full text-center mb-4 transition-colors duration-300 flex items-center justify-center"
>
  <i class={`fab ${icon} mr-2`}></i>
  {title}
</a>